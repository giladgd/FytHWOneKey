        <receiver android:name=".receivers.UsbReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>
            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
        </receiver>
<!-- ==================================================================================== -->
<!-- Below are the several broadcast receivers for BTPhone and BTAV for the BT app        -->
<!-- ==================================================================================== -->

        <!-- Broadcast receivers to catch the BT broadcasts -->
        <receiver android:name=".receivers.BTPhoneReceiver" >
            <intent-filter>
                <action android:name="com.syu.ms.bt" >
                </action>
            </intent-filter>
            <intent-filter>
                <action android:name="com.syu.bt.bykey" >
                </action>
            </intent-filter>
        </receiver>

        <receiver android:name=".receivers.BTAVReceiver" >
            <intent-filter>
                <action android:name="com.syu.bt.byav" >
                </action>
            </intent-filter>
        </receiver>

        </application>
</manifest>
